<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true" android:left="-2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/theme_blue" />
            <corners android:topRightRadius="51dp" android:bottomRightRadius="51dp"/>
            <stroke android:width="1dp" android:color="#BFBFBF" />
        </shape>
    </item>
    <item android:state_checked="false" android:left="-2dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <corners android:topRightRadius="51dp" android:bottomRightRadius="51dp"/>
            <stroke android:width="1dp" android:color="#BFBFBF" />
        </shape>
    </item>
</selector>